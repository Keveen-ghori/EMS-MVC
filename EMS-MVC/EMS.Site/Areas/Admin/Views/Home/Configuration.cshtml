@{
    ViewData["Title"] = Resourses.Configue;
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}

<h2>Configuration Management</h2>

<div class="mt-3">
    <div class="card">
        <div class="card-body">
            <!-- For demo purpose -->
            <div class="">
                <div class="mx-auto">
                    <div class="bg-white pt-3 rounded">
                        <div class="row">
                            <div class="col">
                                <div class="">   
                                    <label asp-for="@Model.Total_Attemps" class="form-label"></label>
                                    <input asp-for="@Model.Total_Attemps" class="form-control bg-none rounded rounded-pill shadow-sm mb-4 p-2 ps-3">
                                </div>
                            </div>
                            <div class="col">
                                <div class="">
                                    <label asp-for="@Model.Exp_Days" class="form-label"></label>
                                    <input asp-for="@Model.Exp_Days" class="form-control bg-none rounded rounded-pill shadow-sm mb-4 p-2 ps-3">
                                </div>
                            </div>
                            <div class="">
                                <div class="input-group d-flex justify-content-end">
                                    <Button type="submit" class="rounded rounded-pill shadow-sm search-btn me-4" id="updateButton">Update</Button>
                                    <Button type="button" class="rounded rounded-pill shadow-sm clear-btn" onclick="window.location.reload(true)">Cancle</Button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
