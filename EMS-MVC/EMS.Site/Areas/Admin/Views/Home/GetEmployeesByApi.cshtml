@using EMS.Application.ViewModels;
@using EMS.Core.Constants;
@model Response<List<EmployeeApiVM>>;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
    ViewData["Title"] = Resourses.EmpManagement;
}
<link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
<script src="~/admin/js/ApiCrud.js"></script>
<h2>Employee</h2>

<div class="mt-3">
    <div class="card">
        <div class="card-body">
            <div class="">
                <div class="bg-white pt-3 rounded">
                    <div class="table-wrapper">
                        <div class="table-title">
                            <div class="row">
                                <div class="col-md-12">
                                    <a class="btn btn-success" onclick="CreateEmpApi()" data-bs-toggle="modal"><i class="fa fa-circle-plus"></i> <span>Add New </span></a>
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>User Name</th>
                                        <th>Email</th>
                                        <th>Gender</th>
                                        <th>Date of Birth</th>
                                        <th>IsLocked?</th>
                                        <th>Status</th>
                                        <th>Attemps</th>
                                        <th>Password Updated Date</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <partial name="_EmpListsApiPartial" model="Model" />
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="addEmp"></div>
