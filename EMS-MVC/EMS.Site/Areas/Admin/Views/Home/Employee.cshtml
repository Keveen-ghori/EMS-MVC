@using EMS.Core.Constants;
@model SpEmployeeListsViewModel;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
    ViewData["Title"] = Resourses.EmpManagement;
}

<link href="~/lib/mdbbootstrap/css/mdb.min.css" rel="stylesheet" />
<h2>Employee</h2>

<div class="mt-4">
    <div class="card">
        <div class="card-body">
            <!-- For demo purpose -->
            <div class="">
                <div class="mx-auto">
                    <div class="bg-white p-3 rounded">
                        <div class="row">
                            <div class="col">
                                <div class="input-group">
                                    <input type="search" name="Username" id="Username" placeholder="Search by Username..." class="form-control bg-none rounded rounded-pill shadow-sm mb-4 p-2 ps-3">
                                </div>
                            </div>
                            <div class="col">
                                <div class="input-group">
                                    <input type="search" name="Email" id="Email" placeholder="Search by Email..." class="form-control bg-none rounded rounded-pill shadow-sm mb-4 p-2 ps-3">
                                </div>
                            </div>
                            <div class="col">
                                <div class="input-group">
                                    <input type="date" name="DOB" id="DOB" placeholder="Search by Date of birth..." class="form-control bg-none rounded rounded-pill shadow-sm mb-4 p-2 ps-3">
                                </div>
                            </div>
                            <div class="col">
                                <div class="input-group">
                                    <select name="Gender" id="Gender" class="form-control bg-none rounded rounded-pill shadow-sm mb-4 p-2 ps-3" title="Select gender">
                                        <option value="">Gender</option>
                                        <option value="1">Male</option>
                                        <option value="2">Female</option>
                                        <option value="3">Unisex</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col">
                                <div class="input-group">
                                    <select name="Status" id="Status" class="form-control bg-none rounded rounded-pill shadow-sm mb-4 p-2 ps-3" title="Select gender">
                                        <option value="">Status</option>
                                        <option value="True">Lock</option>
                                        <option value="False">Unlock</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                      
                        <div class="">
                            <div class="input-group d-flex justify-content-end">
                                <Button type="submit" class="rounded rounded-pill shadow-sm search-btn" id="Search">Search</Button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <partial name="@PartialViews._EmpListsPartial" model="Model" />
        </div>
    </div>

</div>
