@using EMS.Core.Constants;
@model SpEmployeeListsViewModel;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
    ViewData["Title"] = Resourses.EmpManagement;
}

<link href="~/lib/mdbbootstrap/css/mdb.min.css" rel="stylesheet" />
<h2>Employee</h2>

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <table class="table table-hover table-responsive mb-0">
                <thead>
                    <tr>
                        <th scope="row" class="th-lg">User Name</a></th>
                        <th class="th-lg">Email</th>
                        <th class="th-lg">DOB</th>
                        <th class="th-lg">Gender</th>
                        <th class="th-lg">IsLocked</th>
                        <th class="th-lg"></th>
                    </tr>
                </thead>
                <tbody id="EmpListsTable">
                    <partial name="_EmpListsPartial" model="Model" />
                </tbody>
            </table>

            <div class="d-flex justify-content-center">
                <nav class="my-4 pt-2">
                    <ul class="pagination pagination-circle pg-blue mb-0">
                        <!--Numbers-->
                        @{
                            if (Model.TotalPages > 1)
                            {
                                @if (Model.CurrentPage > 1)
                                {
                                    <!-- First -->
                                    <li class="page-item clearfix d-none d-md-block">
                                        <a class="page-link">First</a>
                                    </li>
                                    <!-- Arrow left -->
                                    <li class="page-item">
                                        <a class="page-link" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <!-- First (disabled) -->
                                    <li class="page-item disabled clearfix d-none d-md-block">
                                        <a class="page-link">First</a>
                                    </li>
                                    <!-- Arrow left (disabled) -->
                                    <li class="page-item disabled">
                                        <a class="page-link" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                    </li>
                                }
                                <!-- Numbered pages -->
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    if (i == Model.CurrentPage)
                                    {
                                        <li class="page-item active"><a class="page-link">@i</a></li>
                                    }
                                    else
                                    {
                                        <li class="page-item"><a class="page-link" onclick="loadPage(@i)">@i</a></li>
                                    }
                                }
                                <!-- Next and Last buttons -->
                                @if (Model.CurrentPage < Model.TotalPages)
                                {
                                    <!-- Arrow right -->
                                    <li class="page-item">
                                        <a class="page-link" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </li>
                                    <!-- Last -->
                                    <li class="page-item clearfix d-none d-md-block">
                                        <a class="page-link">Last</a>
                                    </li>
                                }
                                else
                                {
                                    <!-- Arrow right (disabled) -->
                                    <li class="page-item disabled">
                                        <a class="page-link" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </li>
                                    <!-- Last (disabled) -->
                                    <li class="page-item clearfix d-none d-md-block disabled">
                                        <a class="page-link">Last</a>
                                    </li>
                                }

                            }

                        }
                    </ul>
                </nav>
            </div>

        </div>
    </div>

</div>
