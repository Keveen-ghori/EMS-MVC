    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@


<ul id="pagination" class="pagination pagination-circle pg-blue mb-0">
    <!--Numbers-->
    @{
        if (Model.TotalPages > 1)
        {
            @if (Model.CurrentPage > 1)
            {
                <!-- First -->
                <li class="page-item clearfix d-none d-md-block">
                    <a class="page-link" onclick="loadPage(1)">First</a>
                </li>
                <!-- Arrow left -->
                <li class="page-item">
                    <a class="page-link" aria-label="Previous" onclick="loadPage(@Model.CurrentPage-1)">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }
            else
            {
                <!-- First (disabled) -->
                <li class="page-item disabled clearfix d-none d-md-block">
                    <a class="page-link">First</a>
                </li>
                <!-- Arrow left (disabled) -->
                <li class="page-item disabled">
                    <a class="page-link" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }
            <!-- Numbered pages -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <li class="page-item active"><a class="page-link">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a class="page-link" onclick="loadPage(@i)">@i</a></li>
                }
            }
            <!-- Next and Last buttons -->
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <!-- Arrow right -->
                <li class="page-item">
                    <a class="page-link" aria-label="Next" onclick="loadPage(@Model.CurrentPage + 1)">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
                <!-- Last -->
                <li class="page-item clearfix d-none d-md-block">
                    <a class="page-link" onclick="loadPage(@Model.TotalPages)">Last</a>
                </li>
            }
            else
            {
                <!-- Arrow right (disabled) -->
                <li class="page-item disabled">
                    <a class="page-link" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
                <!-- Last (disabled) -->
                <li class="page-item clearfix d-none d-md-block disabled">
                    <a class="page-link">Last</a>
                </li>
            }

        }

        else if(Model.TotalPages == 1)
        {
            <!-- First -->
            <li class="page-item clearfix d-none disabled d-md-block">
                <a class="page-link">First</a>
            </li>
            <!-- Arrow left -->
            <li class="page-item">
                <a class="page-link disabled" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item active"><a class="page-link">1</a></li>
            <!-- Arrow right (disabled) -->
            <li class="page-item disabled">
                <a class="page-link" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
            <!-- Last (disabled) -->
            <li class="page-item clearfix d-none d-md-block disabled">
                <a class="page-link">Last</a>
            </li>
        }
    }
</ul>

