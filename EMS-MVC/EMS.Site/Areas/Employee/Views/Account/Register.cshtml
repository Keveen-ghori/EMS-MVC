@using EMS.Core.Constants
@using EMS.Site.Areas.Employee.Models;
@model EmployeeViewModel;
@{
    Layout = "~/Areas/Employee/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Resourses.EmpRegister;
    DateTime today = DateTime.Now;
}
<div class="form">
    <form class="register-form needs-validation" asp-asp-controller="@Controllors.Account" asp-action="@Actions.Register" method="post" novalidate>
        <h2>Create an account</h2>
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <input asp-for="@Model.Employee.FirstName" value="" class="form-control" required>
                        <label asp-for="@Model.Employee.FirstName" class="form-label control-label"></label>
                        <span asp-validation-for="@Model.Employee.FirstName" class="text-danger my-validation"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <input asp-for="@Model.Employee.LastName" value="" class="form-control" required>
                        <label asp-for="@Model.Employee.LastName" class="form-label control-label"></label>
                        <span asp-validation-for="@Model.Employee.LastName" class="text-danger my-validation"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <dv class="col">
                    <div class="form-group">
                        <input asp-for="@Model.Employee.Email" class="form-control" required>
                        <label asp-for="@Model.Employee.Email" class="form-label control-label"></label>
                        <span asp-validation-for="@Model.Employee.Email" class="text-danger my-validation"></span>
                    </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <input asp-for="@Model.Employee.DOB" class="form-control" max="@today.ToString("yyyy-MM-dd")" required>
                        <label asp-for="@Model.Employee.DOB" class="form-label control-label"></label>
                        <span asp-validation-for="@Model.Employee.DOB" class="text-danger my-validation"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <select asp-for="@Model.Employee.Gender" class="form-control select minimal" style="Padding: 15px;" required>
                            <option value="" hidden></option>
                            <option value="1">Male</option>
                            <option value="2">Female</option>
                            <option value="3">Unisex</option>
                        </select>
                        <label asp-for="@Model.Employee.Gender" class="form-label control-label"></label>
                        <span asp-validation-for="@Model.Employee.Gender" class="text-danger my-validation"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input asp-for="@Model.Employee.Password" class="form-control" required>
                <label asp-for="@Model.Employee.Password" class="form-label control-label"></label>
                <span asp-validation-for="@Model.Employee.Password" class="text-danger cus-validation"></span>
            </div>
            <div class="form-group">
                <input asp-for="@Model.Employee.ConfirmPassword" class="form-control" required>
                <label asp-for="@Model.Employee.ConfirmPassword" class="form-label control-label"></label>
                <span asp-validation-for="@Model.Employee.ConfirmPassword" class="text-danger cus-validation"></span>
            </div>
            <button type="submit">Register</button>
            <p class="message">Already registered? <a href="@Url.Action(Actions.Login,Controllors.Account)">Sign In</a></p>
        </div>
    </form>
</div>
